<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="eus.ehu.tta.pbahillo002.aspie.Game1Activity"
    android:orientation="vertical">
    <TextView
        android:id="@+id/game1_question_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <VideoView
        android:id="@+id/game1_question_video"
        android:layout_width="wrap_content"
        android:layout_height="240dp"/>
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:columnCount="2">
        <Button
            android:id="@+id/game1_answer0_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:onClick="check" />
        <Button
            android:id="@+id/game1_answer1_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:onClick="check"/>
        <ImageView
            android:id="@+id/game1_answer0_image"
            android:layout_gravity="left"
            android:layout_width="wrap_content"/>
        <ImageView
            android:id="@+id/game1_answer1_image"
            android:layout_gravity="right"
            android:layout_width="wrap_content"/>

    </GridLayout>


</LinearLayout>
